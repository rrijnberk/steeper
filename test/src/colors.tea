type color {
    element input {
        attribute border: #000 : [ The color for input borders ];
        attribute width: #2px : [ The width of an input ];

        modifier disabled {
            attribute border: #000 : [ The color for input borders ];
        }
    }

    attribute input: #F00 : [ The color of an input ];

    element input {
        attribute border: #000 : [ The color for input borders ];
    }
}